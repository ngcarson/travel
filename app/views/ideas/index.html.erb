<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1>Listing Ideas</h1>
</div>

<table>
  <thead>
    <tr>
      <th>Idea</th>
      <th>Destination</th>
      <th>Start</th>
      <th>End</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.Idea %></td>
        <td><%= idea.Destination %></td>
        <td><%= idea.Start %></td>
        <td><%= idea.End %></td>
        <td><%= idea.Tags %></td>
        <td><%= link_to 'Show', idea %></td>
        <span>
          <td><%= link_to 'Edit', edit_idea_path(idea) %></td>
          <td><%= link_to 'Delete', idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </span>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Idea', new_idea_path %>
