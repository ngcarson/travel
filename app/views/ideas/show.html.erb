<p id="notice"><%= notice %></p>

<%= image_tag @idea.image.url(:medium) %>

<div class="details">
  <p>
    <strong>Latitude:</strong>
    <%= @idea.latitude %>
  </p>

  <p>
    <strong>Longitude:</strong>
    <%= @idea.longitude %>
  </p>

  <p>
    <strong>Idea:</strong>
    <%= @idea.Idea %>
  </p>

  <p>
    <strong>Destination:</strong>
    <%= @idea.Destination %>
  </p>

  <p>
    <strong>Start:</strong>
    <%= @idea.Start %>
  </p>

  <p>
    <strong>End:</strong>
    <%= @idea.End %>
  </p>

  <p>
    <strong>Tags:</strong>
    <%= @idea.Tags %>
  </p>
</div>

<% if @idea.user == current_user %>
  <%= link_to "Edit", edit_idea_path(@idea), class: 'btn btn-danger btn-xs' %>
  <%= link_to "Delete", idea_path(@idea), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %>
<% end %>
<%= link_to "Back", ideas_path, class: 'btn btn-danger btn-xs' %>

<div id="comments">
  <h2 class="count">
    <%= pluralize(@idea.comments.count, 'Comment') %>
  </h2>
  <ul id="render">  
    <%= render @idea.comments.reverse %>
  </ul>
  <h3>Reply to thread</h3>
    <%= render "comments/form" %>
</div>