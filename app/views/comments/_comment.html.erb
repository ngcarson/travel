<div class="comment">
  <p>
    <span class="feedback"><%= comment.comment %><br></span>
    <span class="email"><%= comment.user.email if comment.user %><br></span>
    <span class="publish">Published <em><%= time_ago_in_words(comment.created_at) %></em> ago.<br></span>
    <%= link_to "Edit", edit_idea_comment_path(comment.idea, comment), class: 'btn btn-warning btn-xs' %>
    <%= link_to "Delete", [comment.idea, comment], method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-info btn-xs' %>
  </p>
</div>